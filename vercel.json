{
  "version": 2,
  "builds": [
    {
      "src": "apps/server/package.json",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**"] }
    },
    {
      "src": "apps/web/package.json",
      "use": "@vercel/static"
    },
    {
      "src": "apps/docs/package.json",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/server/(.*)", "dest": "/apps/server/$1" },
    { "src": "/docs/(.*)", "dest": "/apps/docs/$1" },
    { "src": "/(.*)", "dest": "/apps/web/$1" }
  ]
}
